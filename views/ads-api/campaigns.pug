extends layout.pug

block content
  .campaign-container
    .filters
      h2 筛选条件
      form#filterForm
        .form-row
          .form-group
            label(for="countryFilter") 国家:
            select#countryFilter(name="country")
              option(value="") 全部国家
              option(value="US") 美国
              option(value="CA") 加拿大
              option(value="UK") 英国
              option(value="AE") 阿联酋
              option(value="SA") 沙特
          
          .form-group
            label(for="statusFilter") 状态:
            select#statusFilter(name="status")
              option(value="") 全部
              option(value="enabled" selected) 启用中
              option(value="paused") 已暂停
              option(value="archived") 已归档
          
          .form-group
            label(for="nameFilter") 名称包含:
            input#nameFilter(type="text", name="name", placeholder="输入活动名称")
        
        .form-actions
          button.btn-secondary#resetBtn(type="button") 重置
    
    .campaign-stats
      .stat-card
        h3 总活动数
        p#totalCampaigns 0
      .stat-card
        h3 总预算
        p#totalBudget $0.00
      .stat-card
        h3 总预算使用率
        p#budgetUsage 0.00%
      .stat-card
        h3 平均CTR
        p#avgCtr 0.00%
    
    .campaign-list
      .table-responsive
        table
          thead
            tr
              th ID
              th 名称
              th 国家
              th 状态
              th 预算
              th 开始日期
              th 
                span.tooltip 预算使用率
                  span.tooltiptext 已花费/总预算
              th 操作
          tbody#campaignTableBody
            tr
              td(colspan="8") 正在加载数据...
      
      .pagination-controls
        .pagination-info
          span#pageInfo 显示 0-0 条，共 0 条
        .pagination-buttons
          button#prevPage(disabled) 上一页
          button#nextPage(disabled) 下一页

block scripts
  script(src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js")
  script(src="/compaigns.js")