doctype html
html(lang="zh-CN")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 广告活动管理
    link(rel="stylesheet", href="/style.css")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  body
    header
      h1 亚马逊广告管理系统
      nav
        a(href="/") 首页
        a(href="#", class="active") 广告活动
        - const needreturl = 'https://www.amazon.com/ap/oa?client_id=' + process.env.ADS_API_CLIENT_ID + '&scope=advertising::campaign_management&response_type=code&redirect_uri=' + process.env.ADS_SIGNIN_URL;
        a(href=needreturl) 获取认证
    
    main
      block content
    
    footer
      p © #{new Date().getFullYear()} 广告管理系统

    block scripts